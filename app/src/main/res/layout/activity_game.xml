<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GameActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textStatus"
            tools:text="Status"
            android:textSize="20sp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"/>
    <Button
            android:text="Reveal"
            android:layout_width="0dp"
            android:layout_height="48dp" android:id="@+id/btnReveal"
            app:layout_constraintEnd_toStartOf="@+id/btnRestart" android:layout_marginEnd="12dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textStatus" android:textSize="12sp"
    />
    <Button
            android:text="Restart"
            android:layout_width="0dp"
            android:layout_height="48dp" android:id="@+id/btnRestart"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textStatus" android:textSize="12sp"
            android:onClick="restartGame"/>
    <Button
            android:text="Step Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnGoback"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" android:layout_marginEnd="16dp" android:textSize="12sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textStepCount"
            tools:text="Step: 1" android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/btnGoback" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <TableLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/tableGame"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/btnReveal"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/btnGoback"
            android:visibility="visible"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_myplaces"
            android:id="@+id/imagePlayer"
            app:layout_constraintBottom_toTopOf="@+id/tableGame" app:layout_constraintStart_toStartOf="@+id/tableGame"/>
</androidx.constraintlayout.widget.ConstraintLayout>